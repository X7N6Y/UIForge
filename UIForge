-- UIForge GUI
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Create the main GUI frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0.25, 0, 0.25, 0)
MainFrame.Position = UDim2.new(0.75, -125, 0.5, -125)
MainFrame.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
MainFrame.Visible = true
MainFrame.Parent = player:WaitForChild("PlayerGui")

-- Create the toggle button
local ToggleButton = Instance.new("TextButton")
ToggleButton.Size = UDim2.new(0, 50, 0, 50)
ToggleButton.Position = UDim2.new(0.95, -55, 0.05, 0)
ToggleButton.Text = "â˜°"
ToggleButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
ToggleButton.Parent = player:WaitForChild("PlayerGui")

-- Create close button
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 50, 0, 50)
CloseButton.Position = UDim2.new(0.95, -55, 0.95, -55)
CloseButton.Text = "X"
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
CloseButton.Parent = MainFrame

-- Create options frame
local OptionsFrame = Instance.new("Frame")
OptionsFrame.Size = UDim2.new(1, 0, 1, 0)
OptionsFrame.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
OptionsFrame.Visible = false
OptionsFrame.Parent = MainFrame

-- Create notification pop-up
local Notification = Instance.new("TextLabel")
Notification.Size = UDim2.new(0.25, 0, 0.1, 0)
Notification.Position = UDim2.new(0.75, 0, 0.9, 0)
Notification.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
Notification.Text = "Loaded Successfully!"
Notification.TextColor3 = Color3.fromRGB(255, 255, 255)
Notification.TextScaled = true
Notification.Visible = false
Notification.Parent = player:WaitForChild("PlayerGui")

-- Function to toggle options visibility
local function toggleOptions()
    OptionsFrame.Visible = not OptionsFrame.Visible
end

-- Function to show notification
local function showNotification()
    Notification.Visible = true
    wait(3)  -- Notification shows for 3 seconds
    Notification.Visible = false
end

-- Event listeners
ToggleButton.MouseButton1Click:Connect(toggleOptions)
CloseButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

-- Show loading notification when GUI loads
showNotification()
print("UIForge GUI successfully loaded!")