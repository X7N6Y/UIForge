local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TitleLabel = Instance.new("TextLabel")
local ToggleButton = Instance.new("TextButton")
local Slider = Instance.new("TextButton")
local SliderValueLabel = Instance.new("TextLabel")
local DropdownButton = Instance.new("TextButton")
local DropdownList = Instance.new("Frame")
local TextBox = Instance.new("TextBox")
local DropdownValueLabel = Instance.new("TextLabel")
local OpenButton = Instance.new("TextButton")

-- Configure Main Frame
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
MainFrame.Size = UDim2.new(0, 300, 0, 300)
MainFrame.Visible = true -- Set to visible initially

-- Configure Title Label
TitleLabel.Parent = MainFrame
TitleLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.Size = UDim2.new(1, 0, 0.2, 0)
TitleLabel.Text = "Ultimate UIForge"
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.TextScaled = true

-- Configure Toggle Button
ToggleButton.Parent = MainFrame
ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 255)
ToggleButton.Size = UDim2.new(0.8, 0, 0.1, 0)
ToggleButton.Position = UDim2.new(0.1, 0, 0.25, 0)
ToggleButton.Text = "Toggle Option"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Toggle Logic
local toggleOn = false
ToggleButton.MouseButton1Click:Connect(function()
    toggleOn = not toggleOn
    if toggleOn then
        ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
        print("Toggle is ON")
    else
        ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 255)
        print("Toggle is OFF")
    end
end)

-- Configure Slider
Slider.Parent = MainFrame
Slider.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
Slider.Size = UDim2.new(0.8, 0, 0.1, 0)
Slider.Position = UDim2.new(0.1, 0, 0.4, 0)
Slider.Text = "Set Value"
Slider.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Configure Slider Value Label
SliderValueLabel.Parent = MainFrame
SliderValueLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
SliderValueLabel.Size = UDim2.new(1, 0, 0.1, 0)
SliderValueLabel.Position = UDim2.new(0, 0, 0.55, 0)
SliderValueLabel.Text = "Value: 0"
SliderValueLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
SliderValueLabel.TextScaled = true

-- Slider Logic
local value = 0
Slider.MouseButton1Click:Connect(function()
    value = (value + 1) % 10 -- Loop through values 0 to 9
    SliderValueLabel.Text = "Value: " .. value
    print("Slider Value: " .. value)
end)

-- Configure Dropdown Button
DropdownButton.Parent = MainFrame
DropdownButton.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
DropdownButton.Size = UDim2.new(0.8, 0, 0.1, 0)
DropdownButton.Position = UDim2.new(0.1, 0, 0.7, 0)
DropdownButton.Text = "Select Option"
DropdownButton.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Configure Dropdown List
DropdownList.Parent = MainFrame
DropdownList.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
DropdownList.Size = UDim2.new(0.8, 0, 0.3, 0)
DropdownList.Position = UDim2.new(0.1, 0, 1.1, 0)
DropdownList.Visible = false

-- Dropdown Options
local options = {"Option 1", "Option 2", "Option 3"}
for i, option in ipairs(options) do
    local optionButton = Instance.new("TextButton")
    optionButton.Parent = DropdownList
    optionButton.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    optionButton.Size = UDim2.new(1, 0, 0.2, 0)
    optionButton.Position = UDim2.new(0, 0, (i-1)*0.2, 0)
    optionButton.Text = option
    optionButton.TextColor3 = Color3.fromRGB(0, 0, 0)

    optionButton.MouseButton1Click:Connect(function()
        DropdownButton.Text = "Selected: " .. option
        print("Dropdown Option Selected: " .. option)
        DropdownList.Visible = false
    end)
end

-- Dropdown Logic
DropdownButton.MouseButton1Click:Connect(function()
    DropdownList.Visible = not DropdownList.Visible
end)

-- Configure TextBox
TextBox.Parent = MainFrame
TextBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
TextBox.Size = UDim2.new(0.8, 0, 0.1, 0)
TextBox.Position = UDim2.new(0.1, 0, 1.4, 0)
TextBox.PlaceholderText = "Type here..."
TextBox.TextColor3 = Color3.fromRGB(0, 0, 0)

-- Configure Open Button
OpenButton.Parent = ScreenGui
OpenButton.BackgroundColor3 = Color3.fromRGB(50, 50, 255)
OpenButton.Size = UDim2.new(0, 50, 0, 50)
OpenButton.Position = UDim2.new(0.05, 0, 0.5, -25)
OpenButton.Text = "ðŸ¡¥"
OpenButton.TextColor3 = Color3.fromRGB(255, 255, 255)
OpenButton.TextScaled = true

-- Open Button Logic
local guiVisible = true
OpenButton.MouseButton1Click:Connect(function()
    guiVisible = not guiVisible
    MainFrame.Visible = guiVisible
    OpenButton.Text = guiVisible and "ðŸ¡¥" or "ðŸ¡¤" -- Change icon based on visibility
end)

-- Display GUI
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
